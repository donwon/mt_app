
      <div class="buffer">
        <h2 class="navbar-fixed-top">THE REPOSITORY
          <%= link_to 'CREATE NEW REPO', new_project_path, class: "btn btn-primary back-lit-btn pull-right" %>
        </h2>
      </div>

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-sm-10 col-md-10"> 
      <br><br><br>
    </div>
  </div>
</div>



  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6">
        <h3>Most Recent Repositories</h3>
        <% @projects_recent.each do |project| %>
            
            <!-- <div class="well"> -->

          <h4><i class="fa fa-book fa-2x"></i><%= project.title %></h4>
          <br><%= project.updated_at %> | views: <%= project.hit_counter %> |
          <br><strong>Created By:</strong> <%= project.user.email %> 
          <br><strong>Category:</strong> <%= project.category %>
          <br><%= project.body.truncate(140) %>
          <br><%= link_to 'Show', project, class: "btn btn-info back-lit-btn" %>  
          <%= link_to 'Edit', edit_project_path(project), class: "btn btn-info back-lit-btn", remote: true %>  
          <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger back-lit-btn" %> 
     <!-- </div> -->
        <% end %>
    </div>
    
    <div class="col-xs-6 col-sm-6 col-md-6"><div class="well">
        <h3>Most Popular Repositories</h3>
        <% @projects_by_hits.each do |project| %>

          <p>|Views: <%= project.hit_counter %> |<span class="glyphicon glyphicon-book"></span>
          <%= link_to project.title, project %>
           </p>
          <hr>
        <% end %>
    </div>
    </div>

  </div>



